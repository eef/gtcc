%h1
  Tunings
%table
  %tr
    %th Name
    %th Car
    %th User
    %th Description
    %th

  - @tunings.each do |tuning|
    %tr
      %td= tuning.name
      %td= tuning.car.name
      %td= tuning.user.username
      %td= tuning.description
      %td
        = link_to 'Show', tuning
        - if tuning.user.eql?(current_user)
          = link_to 'Edit', edit_tuning_path(tuning)
          = link_to 'Destroy', tuning, :confirm => 'Are you sure?', :method => :delete

%br

= link_to 'New Tuning', new_tuning_path
