%h2
  Sign up
%p
  Fields with a red left border are required
= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
  = devise_error_messages!
  %p.form-sep
    = f.label :username
    = f.text_field :username, :class => "text-input required"
  %p.form-sep
    = f.label :email
    = f.text_field :email, :class => "text-input required"
  %p.form-sep
    = f.label :psn_name
    = f.text_field :psn_name, :class => "text-input required"
  %p.form-sep
    = f.label :reddit_name
    = f.text_field :reddit_name, :class => "text-input"
  %p.form-sep
    = f.label :first_name
    = f.text_field :first_name, :class => "text-input"
  %p.form-sep
    = f.label :last_name
    = f.text_field :last_name, :class => "text-input"
  %p.form-sep
    = f.label :timezone, :style => "border-left: 2px solid red; padding-left: 3px;"
    = f.select :timezone, ActiveSupport::TimeZone.all.map {|u| ["#{u.name} #{u.formatted_offset}",u.name]}
  %p.form-sep
    = f.label :password
    = f.password_field :password, :class => "text-input required"
  %p.form-sep
    = f.label :password_confirmation
    = f.password_field :password_confirmation, :class => "text-input required"
  %p.form-sep
    = f.submit "Sign up", :class => "submit"
