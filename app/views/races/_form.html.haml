= form_for @race do |f|
  -if @race.errors.any?
    #error_explanation
      %h2= "#{pluralize(@race.errors.count, "error")} prohibited this race from being saved:"
      %ul
        - @race.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :location
    = f.text_field :location
  .field
    = f.label :track
    = f.select :track_id, Track.all.map {|u| [u.name,u.id]}
  .actions
    = f.submit 'Save'
