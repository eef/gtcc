%tr
  %td
    - if @league.new_record?
      = f.file_field :photo_data, :class => "text-input"
      = note("Upload a photo for your league")
    - elsif @league.photos.blank?
      = f.file_field :photo_data, :class => "text-input"
      = note("Upload a photo for your league")
    - elsif !@league.photos.blank?
      = image_tag(@league.photos.first.photo_data.url(:small)) unless @league.photos.blank?
      %label{:style => "display: inline;"}
        Delete?
      = f.check_box '_destroy', :style => "display: inline;"