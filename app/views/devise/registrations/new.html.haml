= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
  = devise_error_messages!
  %p.form-sep
    = f.label :username
    = f.text_field :username, :class => "text-input"
  %p.form-sep
    = f.label :email
    = f.text_field :email, :class => "text-input"
  %p.form-sep
    = f.label :password
    = f.password_field :password, :class => "text-input"
  %p.form-sep
    = f.label :password_confirmation
    = f.password_field :password_confirmation, :class => "text-input"
  %p.form-sep
    = f.submit "Sign up", :class => "submit"
